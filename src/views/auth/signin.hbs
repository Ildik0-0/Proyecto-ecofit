              <div class="container p-4 col-md-4 form-group">
                    <label for="text" class="form-label">Usuario:</label>
                    <input type="text" class="form-control " id="" placeholder="Usuario" name="usuario" autofocus>
                </div>
                   

                <div class="container p-4 col-md-4 form-group">
                    <label for="pwd" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="" placeholder="Enter password" name="pass" autofocus>
                </div>

                <div class= "container p-4 col-md-4 form-group">
                     
                    <button type="submit" class="btn btn-success  col-md-4">Submit</button>
                </div>
                
            </form>
        </div>
    </div>
</div>